<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0
                       https://maven.apache.org/xsd/settings-1.0.0.xsd">
 <mirrors>
    <mirror>
      <id>confluent-maven-remote</id>
      <url>https://someurl</url>
      <mirrorOf>some mirrors</mirrorOf>
    </mirror>
 </mirrors>
 
 <servers>
   <server>
     <id>confluent-nexus-central</id>
     <username>nexus username</username>
     <password>nexus password</password>
   </server>
   <server>
     <id>confluent-maven-remote</id>
     <username>nexus username</username>
     <password>nexus password</password>
   </server>
 </servers>
  
 <profiles>
   <profile>
     <id>confluent-nexus</id>
     <pluginRepositories>
       <pluginRepository>
         <id>confluent-nexus-central</id>
         <name>Confluent Plugin Repository</name>
         <url>https://someurl</url>
         <layout>default</layout>
         <snapshots>
           <enabled>true</enabled>
         </snapshots>
         <releases>
           <enabled>true</enabled>
         </releases>
       </pluginRepository>
     </pluginRepositories>
   </profile>
 </profiles>
 <activeProfiles>
   <activeProfile>confluent-nexus</activeProfile>
 </activeProfiles>
</settings>
